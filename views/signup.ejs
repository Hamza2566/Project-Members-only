<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cal+Sans&family=Exo+2:ital,wght@0,100..900;1,100..900&family=Josefin+Sans:ital,wght@0,100..700&family=Poetsen+One&display=swap" rel="stylesheet">
  <title>Signup</title>
</head>
<body>
  <%- include('partials/header') %>

  <div class="signup-content">
    <div class="form-sign-div">
      <h1>Signup</h1>

      <% if (typeof errors !== "undefined" && errors.length > 0) { %>
        <ul class="error-messages">
          <% errors.forEach(function(err) { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      <% } %>

      <form action="/signup" method="post" class="form-signup">
        <label for="firstname">Firstname</label>
        <input type="text" name="firstname" id="firstname" value="<%= typeof old !== 'undefined' ? old.firstname : '' %>">

        <label for="lastname">Lastname</label>
        <input type="text" name="lastname" id="lastname" value="<%= typeof old !== 'undefined' ? old.lastname : '' %>">

        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%= typeof old !== 'undefined' ? old.email : '' %>">

        <label for="password">Password</label>
        <input type="password" name="password" id="password">

        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword">

        <input type="submit" value="Submit" class="submit-button">
      </form>
    </div>
  </div>
</body>
</html>
